{
  "id": "error-handler-template",
  "name": "Global Error Handler",
  "type": "@n8n/n8n-nodes-base.set",
  "typeVersion": 3.3,
  "position": [1020, 460],
  "parameters": {
    "mode": "manual",
    "duplicateItem": false,
    "assignments": {
      "assignments": [
        {
          "id": "error-timestamp",
          "name": "error_timestamp",
          "value": "={{ $now.toISO() }}",
          "type": "string"
        },
        {
          "id": "error-workflow",
          "name": "workflow_id",
          "value": "={{ $workflow.id }}",
          "type": "string"
        },
        {
          "id": "error-execution",
          "name": "execution_id",
          "value": "={{ $execution.id }}",
          "type": "string"
        },
        {
          "id": "error-node",
          "name": "error_node",
          "value": "={{ $('Error Trigger').first().json.error.node.name }}",
          "type": "string"
        },
        {
          "id": "error-message",
          "name": "error_message",
          "value": "={{ $('Error Trigger').first().json.error.message }}",
          "type": "string"
        },
        {
          "id": "error-stack",
          "name": "error_stack",
          "value": "={{ $('Error Trigger').first().json.error.stack }}",
          "type": "string"
        },
        {
          "id": "error-context",
          "name": "error_context",
          "value": "={{ JSON.stringify($('Error Trigger').first().json.error.context) }}",
          "type": "string"
        },
        {
          "id": "retry-count",
          "name": "retry_count",
          "value": "={{ $execution.customData.retryCount || 0 }}",
          "type": "number"
        }
      ]
    },
    "options": {}
  },
  "executeOnce": false,
  "retryOnFail": false,
  "maxTries": 1,
  "waitBetweenTries": 1000,
  "continueOnFail": false,
  "alwaysOutputData": false,
  "notes": "Captures and processes error information for logging and recovery"
}